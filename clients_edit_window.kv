WindowManager:
    ClientsScreen

<ClientsScreen>:
    MDScreen:
        BoxLayout:
            id: client_layout
            orientation: "vertical"
            pos_hint: {"center_y": 0.5}
            spacing: 20

            MDLabel:
                text: "Клиент"
                halign: "center"

            MDTextField:
                id: tf_fullname
                mode: "round"
                text: str(root.get_fullname())
                hint_text: "ФИО"
                size_hint_x: None
                width: 300
                font_size: 18
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: tf_phone_num
                mode: "round"
                hint_text: "+7(777)777-77-77"
                text: str(root.get_phone_num())
                size_hint_x: None
                width: 300
                font_size: 18
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: tf_passport_num
                mode: "round"
                hint_text: "0123456789"
                text: str(root.get_passport_num())
                size_hint_x: None
                width: 300
                font_size: 18
                pos_hint: {"center_x": 0.5}

            MDTextField:
                id: tf_gender
                mode: "round"
                hint_text: "м или ж"
                text: str(root.get_gender())
                size_hint_x: None
                width: 300
                font_size: 18
                pos_hint: {"center_x": 0.5}

            MDRoundFlatButton:
                text: "Очистить"
                font_size: 14
                pos_hint: {"center_x": 0.5}
                on_press: root.clear()

            MDRoundFlatButton:
                text: "Сохранить"
                font_size: 14
                pos_hint: {"center_x": 0.5}
                on_press:
                    app.stop() if root.save() else root.nothing()

            MDRoundFlatButton:
                text: "Удалить"
                font_size: 14
                pos_hint: {"center_x": 0.5}
                on_press:
                    app.stop() if root.delete() else root.nothing()